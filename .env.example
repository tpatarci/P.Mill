# Program Mill Configuration

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CEREBRAS_API_KEY=your_cerebras_api_key_here

# LLM Model Configuration
DEFAULT_LLM_PROVIDER=anthropic
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
CEREBRAS_MODEL=llama3.3-70b

# Analysis Configuration
MAX_TOKENS_PER_ANALYSIS=100000
ANALYSIS_TIMEOUT_SECONDS=300
VERIFICATION_DEPTH=standard  # quick, standard, rigorous

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true

# Database
DATABASE_PATH=pmill.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
ENABLE_CODE_EXECUTION=false  # NEVER enable in production
MAX_CODE_SIZE_BYTES=1048576  # 1MB max
ANALYSIS_SANDBOX=true

# Performance
MAX_CONCURRENT_ANALYSES=5
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
